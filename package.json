{
  "name": "@twitchapis/twitch.js",
  "version": "2.0.0-beta.4",
  "description": "Twitch.JS is a Nodejs library made with typescript to interact with the Twitch API in a simple and easy way.",
  "keywords": [
    "nodejs",
    "twitch",
    "twitchtv",
    "twitchirc",
    "twitch-api",
    "bot",
    "chat",
    "message"
  ],
  "type": "commonjs",
  "main": "./build/index.js",
  "types": "./build/index.d.ts",
  "files": [
    "build"
  ],
  "scripts": {
    "build": "npx tsc --build",
    "prepack": "npm run build",
    "eslint": "eslint ./src",
    "eslint:fix": "eslint ./src --fix",
    "test": "node ./tests/tester.js",
    "genDocs": "npx typedoc src/index.ts --excludeExternals true --json out/docs.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/promisependingapis/twitch.js.git"
  },
  "author": "PromisePendingApis Team",
  "contributors": [
    "LoboMetalurgico",
    "Space_Interprise"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/promisependingapis/twitch.js/issues"
  },
  "homepage": "https://twitch.js.org",
  "engines": {
    "node": ">=16.20.x"
  },
  "dependencies": {
    "@discordjs/collection": "^1.5.3",
    "@promisepending/logger.js": "^1.1.1",
    "axios": "^1.7.9",
    "lodash.merge": "^4.6.2",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/lodash.merge": "^4.6.9",
    "@types/node": "^22.13.4",
    "@types/ws": "^8.5.14",
    "@typescript-eslint/eslint-plugin": "^5.55.0",
    "@typescript-eslint/parser": "^5.55.0",
    "eslint": "^8.57.1",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.6.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.0.0",
    "typedoc": "^0.27.6",
    "typedoc-plugin-missing-exports": "^3.1.0",
    "typescript": "^5.7.3"
  }
}
